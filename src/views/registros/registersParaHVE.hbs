{{> head}}
  {{> navbar}}
  <div id="layoutSidenav">
    {{> sideNav}}
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid">
          <div class="row mt-4">
            <div class="col-lg-12">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a href="#tab-table1" class="nav-link active" data-toggle="tab">Cargos</a>
                </li>
                <li class="nav-item">
                  <a href="#tab-table2" class="nav-link" data-toggle="tab">Dependencias</a>
                </li>
                <li class="nav-item">
                  <a href="#tab-table3" class="nav-link" data-toggle="tab">Area de Trabajo</a>
                </li>
              </ul>
              <div class="tab-content">

                <div class="tab-pane active" id="tab-table1">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-lg-8">
                          <div class="col-form-label"><b>CARGOS</b></div>
                        </div>
                        <div class="col-lg-4">
                          <button type="button" class="btn btn-success float-lg-right" data-toggle="modal" data-target="#addCargo">
                            <i class="fas fa-plus-circle"></i>
                          </button>
                        </div>
                      </div>
                      <!-- Modal -->
                      <div class="modal fade" id="addCargo" data-backdrop="static" data-keyboard="false" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                          <div class="modal-content">
                            <div class="modal-header bg-secondary">
                              <h5 class="modal-title text-white" id="staticBackdropLabel">Agregar un cargo</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <form action="/registros/informesAdicionales/1" method="POST">
                              {{> modalAddRegistros}}
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table" id="tableCargos">
                          <thead class="thead-dark">
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Cargo</th>
                              <th scope="col">Accion</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each cargos}}
                              <tr>
                                <th scope="col">{{id}}</th>
                                <td>{{nombre}}</td>
                                <td>
                                  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#editCargo{{id}}">
                                    <i class="fas fa-edit"></i>
                                  </button>
                                  <button type="button" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </td>
                              </tr>
                              <!-- Modal -->
                              <div class="modal fade" id="editCargo{{id}}" data-backdrop="static" data-keyboard="false" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                  <div class="modal-content">
                                    <div class="modal-header bg-secondary">
                                      <h5 class="modal-title text-white" id="staticBackdropLabel">Modificar cargo</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <form action="/registros/edit-registros/{{id}}/1" method="POST">
                                      <div class="modal-body">
                                        <div class="col-lg-12">
                                          <div class="row">
                                            <label for="staticEmail2" class="col-form-label col-lg-3">Nombre:</label>
                                            <input type="text" class="form-control col-lg-9" name="nombreModelRegistro" value="{{nombre}}">
                                          </div>
                                        </div>
                                      </div>
                                      <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Modificar</button>
                                      </div>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            {{/each}}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="tab-pane" id="tab-table2">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
