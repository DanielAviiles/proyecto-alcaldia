{{> head}}
  {{> navbar}}
  <div id="layoutSidenav">
    {{> sideNav}}
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid">
          <div class="row mt-4">
            <div class="col-lg-12">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a href="#tab-table1" class="nav-link active" data-toggle="tab">Empresa / Proveedor</a>
                </li>
                <li class="nav-item">
                  <a href="#tab-table2" class="nav-link" data-toggle="tab">Secretaria</a>
                </li>
              </ul>
              <div class="tab-content">

                <div class="tab-pane active" id="tab-table1">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-lg-8">
                          <div class="col-form-label"><b>EMPRESA / PROVEEDOR</b></div>
                        </div>
                        <div class="col-lg-4">
                          <button class="btn btn-success float-lg-right"><i class="fas fa-plus-circle"></i></button>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table" id="tableEmpresaProveedor">
                          <thead class="thead-dark">
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Nombre</th>
                              <th scope="col">NIT</th>
                              <th scope="col">Accion</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each empresas}}
                              <tr>
                                <th scope="col">{{id}}</th>
                                <td>{{nombre}}</td>
                                <td>{{nit}}</td>
                                <td>
                                  <button class="btn btn-info"><i class="fas fa-edit"></i></button>
                                  <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </td>
                              </tr>
                            {{/each}}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="tab-pane" id="tab-table2">
                  <div class="card">
                    <div class="card-header">
                      <div class="row">
                        <div class="col-lg-8">
                          <div class="col-form-label"><b>SECRETARIAS</b></div>
                        </div>
                        <div class="col-lg-4">
                          <button class="btn btn-success float-lg-right"><i class="fas fa-plus-circle"></i></button>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table" id="tableDependencias">
                          <thead class="thead-dark">
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Nombre</th>
                              <th scope="col">Dependencia</th>
                              <th scope="col">Accion</th>
                            </tr>
                          </thead>
                          <tbody>
                            {{#each secretarias}}
                              <tr>
                                <th scope="col">{{id}}</th>
                                <td>{{nameSecretaria}}</td>
                                <td>{{nameDependencia}}</td>
                                <td>
                                  <button class="btn btn-info"><i class="fas fa-edit"></i></button>
                                  <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </td>
                              </tr>
                            {{/each}}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>

          </div>
        </div>
      </main>
      {{> footer-authentication }}
    </div>
  </div>
{{> footer }}