{{> head-authentication}}

<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
              <div class="card-body">
                <form>
                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputFirstName">Nombres</label>
                        <input class="form-control py-4" id="inputFirstName" type="text" placeholder="Digite nombres" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputLastName">Apellidos</label>
                        <input class="form-control py-4" id="inputLastName" type="text" placeholder="Digite apellidos" />
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Email</label>
                    <input class="form-control py-4" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Digite email" />
                  </div>
                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputPassword">Contrase単a</label>
                        <input class="form-control py-4" id="inputPassword" type="password" placeholder="Digite contrase単a" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputConfirmPassword">Confirmar contrase単a</label>
                        <input class="form-control py-4" id="inputConfirmPassword" type="password" placeholder="Confirmar contrase単a" />
                      </div>
                    </div>
                  </div>
                  <div class="form-group mt-4 mb-0"><a class="btn btn-primary btn-block" href="/login">Crear cuenta</a></div>
                </form>
              </div>
              <div class="card-footer text-center">
                <div class="small"><a href="/login">Ya tiene una cuenta? Ingresa</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
  {{> footer-authentication }}
</div>
{{> footer}}