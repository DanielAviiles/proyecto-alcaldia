{{> head }}
  {{> navbar }}
  <div id="layoutSidenav">
    {{> sideNav }}
    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid">
          {{> headerForms }}
          <div class="row mt-4">
            <form action="" method="POST" class="col-lg-12">
              {{!-- REPORTE. START --}}
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-sm-2 col-form-label"><strong>REGISTRO:</strong></label>
                        <div class="col-sm-10 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                      </div>

                      <div class="row mt-3">
                        <h3 class="col-sm-4 mt-2"><strong>REPORTE.</strong></h3>
                        <div class="col-sm-8 mt-2">
                          <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline1">DAR DE BAJA</label>
                          </div>
                          <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline2">DAÑO DE EQUIPO</label>
                          </div>
                          <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline3" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline3">TRASLADO DE EQUIPO</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- REPORTE. END --}}

              {{!-- INFORMACION DE USUARIO. START --}}
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label">NOMBRE DEL USUARIO:</label>
                        <div class="col-sm-3 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                        <label for="" class="col-sm-3 col-form-label">FECHA DE REPORTE:</label>
                        <div class="col-sm-3 mt-2">
                          <input type="date" class="form-control" value="">
                        </div>
                      </div>

                      <div class="row">
                        <label for="" class="col-sm-2 col-form-label">SECRETARIA:</label>
                        <div class="col-sm-4 mt-2">
                          <select name="" class="custom-select mr-sm-4">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                          </select>
                        </div>
                        <label for="" class="col-sm-2 col-form-label">DEPENDENCIA:</label>
                        <div class="col-sm-4 mt-2">
                          <select name="" class="custom-select mr-sm-4">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                          </select>
                        </div>
                      </div>

                      <div class="row">
                        <label for="" class="col-sm-5 col-form-label">NOMBRE QUIEN SOLICITO EL REPORTE:</label>
                        <div class="col-sm-7 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- INFORMACION DE USUARIO. END --}}

              {{!-- FECHA DEL EVENTO. START --}}
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label">FECHA DEL EVENTO:</label>
                        <div class="col-sm-9 mt-2">
                          <input type="date" class="form-control" value="">
                        </div>
                      </div>
                    
                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label">DESCRIPCION DE LO SUCEDIDO:</label>
                        <div class="col-sm-9 mt-2">
                          <textarea class="form-control" aria-label="With textarea" rows="5"></textarea>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- FECHA DEL EVENTO. END --}}

              {{!-- INFORMACION DEL EQUIPO. START --}}
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-lg-2 col-form-label">TIPO DE EQUIPO:</label>
                        <div class="col-lg-2 mt-2">
                          <select name="" class="custom-select mr-sm-4">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                          </select>
                        </div>
                        <label for="" class="col-lg-2 col-form-label">MARCA:</label>
                        <div class="col-lg-2 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                        <label for="" class="col-lg-2 col-form-label">MODELO:</label>
                        <div class="col-lg-2 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                      </div>

                      <div class="row">
                        <label for="" class="col-sm-2 col-form-label">SERIAL:</label>
                        <div class="col-sm-2 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                        <label for="" class="col-sm-2 col-form-label ">TIPO DE DAÑO:</label>
                        <div class="col-sm-2 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                        <label for="" class="col-sm-2 col-form-label ">PARTE AFECTADA:</label>
                        <div class="col-sm-2 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- INFORMACION DEL EQUIPO. END --}}
              
              {{!-- DATOS Y DIAGNOSTICO DEL EQUIPO. START --}}
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label text-center">DATOS GENERALES DEL EQUIPO:</label>
                        <div class="col-sm-9 mt-2">
                          <textarea class="form-control" aria-label="With textarea"></textarea>
                        </div>
                      </div>

                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label d-flex align-items-center">DIAGNOSTICO DEL EQUIPO:</label>
                        <div class="col-sm-9 mt-2">
                          <textarea class="form-control" aria-label="With textarea" rows="6"></textarea>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-sm-7 mt-2">
                          <div class="row">
                            <label for="" class="col-sm-4 col-form-label d-flex align-items-center">OBSERVACIONES:</label>
                            <div class="col-sm-8 mt-2">
                              <textarea class="form-control" aria-label="With textarea" rows="5"></textarea>
                            </div>
                          </div>
                          <div class="row">
                            <label for="" class="col-sm-4 col-form-label text-center d-flex align-items-center">DIAGNOSTICO FINAL:</label>
                            <div class="col-sm-8 mt-2">
                              <textarea class="form-control" aria-label="With textarea" rows="6"></textarea>
                            </div>
                          </div>
                        </div>
                        <div class="col-sm-5 mt-2">
                          <div class="row">
                            <label for="" class="col-sm-12 col-form-label text-center">REGISTRO FOTOGRAFICO:</label>
                          </div>
                          <div class="row">
                            <div class="col-sm-12 mt-3">
                              <textarea class="form-control" aria-label="With textarea" rows="10"></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- DATOS Y DIAGNOSTICO DEL EQUIPO. END --}}

              {{!-- INFORMACION DE PROCESO. START --}}
              <div class="row mt-3">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <label for="" class="col-sm-3 col-form-label">NOMBRE DEL RESPONSABLE:</label>
                        <div class="col-sm-3 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                        <label for="" class="col-sm-3 col-form-label">REALIZO EL PROCESO:</label>
                        <div class="col-sm-3 mt-2">
                          <input type="text" class="form-control" value="">
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-sm-12 mt-5">
                          <div class="row firma-div">
                            <div class="col-6" id="div-firma-FRE"></div>
                          </div>
                          <div class="row firma-div">
                            <label for="" class="col-sm-3 col-form-label">FIRMA</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{!-- INFORMACION DE PROCESO. END --}}
            </form>
          </div>
        </div>
      </main>
      {{> footer-authentication }}
    </div>
  </div>
{{> footer }}