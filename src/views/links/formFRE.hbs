      <main>
        <div class="container-fluid">
          <h1 class="mt-4 mb-3 text-center">{{titleForm}}</h1>
          {{> headerForms }}
          <form action="" method="POST" class="mt-4">
            {{!-- REPORTE. START --}}
            <div class="form-group row rounded mx-auto">
              <div class="col-sm-12">
                <div class="row">
                  <label for="" class="col-sm-2 col-form-label"><strong>REGISTRO:</strong></label>
                  <div class="col-sm-5 mt-2">
                    <input type="text" class="form-control" value="">
                  </div>
                </div>
              </div>
              <div class="col-sm-12 items-elementos-FRE">
                <div class="row">
                  <h3 class="col-sm-2 mt-2"><strong>REPORTE.</strong></h3>
                  {{!-- <div class="col-sm-10 mt-2">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                      <label class="form-check-label" for="inlineCheckbox1">DAR DE BAJA</label>
                    </div>
                    <div class="form-check form-check-inline">
